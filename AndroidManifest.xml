<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vedha.sampleapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/present"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.vedha.sampleapp.HomeActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_blank" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vedha.sampleapp.LifecycleActivity"
            android:label="@string/title_activity_blank" >
        </activity>
        <activity
            android:name="com.vedha.sampleapp.PopupExamplesActivity"
            android:label="@string/title_activity_blank" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vedha.sampleapp.MP3Activity"
            android:configChanges="orientation"
            android:label="@string/title_activity_blank" >
        </activity>
        <activity
            android:name=".CardMakerActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_blank" >
        </activity>

        <service android:name=".MP3Service" >
        </service>
    </application>

</manifest>